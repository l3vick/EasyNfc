<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/gray_material_50" />

            <solid android:color="@color/btn_footer_pressed_light" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/gray_material_50" />

            <solid android:color="@android:color/transparent" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>