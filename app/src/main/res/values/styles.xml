<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_material_700</item>
        <item name="colorPrimaryDark">@color/gray_material_900</item>
        <item name="colorAccent">@color/gray_material_50</item>
    </style>

    <!-- Launcher theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="menu_box">
        <item name="android:paddingEnd">@dimen/app_padding</item>
        <item name="android:paddingStart">@dimen/app_padding</item>
    </style>

    <!-- TabLayout -->
    <style name="tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/text_tab_layout</item>
        <item name="android:background">@color/opaque_20</item>
    </style>

    <style name="text_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Menu Buttons Style -->
    <style name="menu_txt" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">35sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:layout_marginStart">@dimen/app_padding</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="menu_txt_small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/txt_menu_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- TextViews -->
    <style name="tag_txt" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textSize">@dimen/item_tags_txt_size</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:maxWidth">130dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/app_padding</item>
    </style>


    <style name="txt_content_auto" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/input_max_size</item>
        <item name="android:autoSizeMinTextSize">@dimen/input_min_size</item>
        <item name="android:gravity">center</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="txt_content" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_800</item>
        <item name="android:textSize">@dimen/txt_content_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="txt_content_clear" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_200</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/txt_content_size</item>
    </style>


    <style name="txt_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_100</item>
        <item name="android:textSize">@dimen/txt_title_size</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>


    <style name="txt_value" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textSize">@dimen/txt_value_size</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txt_tab" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textSize">@dimen/txt_tab_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Separator -->
    <style name="separator">
        <item name="android:background">@color/gray_material_50</item>
    </style>

    <!-- Button -->
    <style name="btn_footer_light">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/app_padding</item>
        <item name="android:layout_marginEnd">@dimen/app_padding</item>
        <item name="android:layout_marginTop">@dimen/app_padding</item>
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textSize">@dimen/txt_value_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="btn_footer_dark">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/app_padding</item>
        <item name="android:layout_marginEnd">@dimen/app_padding</item>
        <item name="android:textColor">@color/subu_start</item>
        <item name="android:textSize">@dimen/txt_value_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- EditText -->
    <style name="et_writer" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/input_max_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/app_padding</item>
        <item name="android:paddingStart">@dimen/app_padding</item>
        <item name="android:paddingEnd">@dimen/app_padding</item>
        <item name="android:hint">@string/et_writer_hint</item>
        <item name="android:textColorHint">@color/opaque_40</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Toolbar -->
    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/opaque_20</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/gray_material_50</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="popup_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/subu_start</item>
        <item name="android:itemBackground">@color/gray_material_50</item>
    </style>

</resources>