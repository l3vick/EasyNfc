<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easy_black"
    tools:context="com.easynfc.writer.format.FormatWriterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/easy_black"
        android:orientation="vertical"
        android:weightSum="7">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/easy_black">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_format_eb_light" />


            <com.easynfc.util.custom.CustomTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tag_format"
                android:textAllCaps="true"
                android:textColor="@color/mustard"
                android:textSize="@dimen/type_title" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_marginRight="@dimen/app_padding"
            android:background="@color/easy_black_superlight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/easy_black"
            android:gravity="center|left"
            android:orientation="vertical">

            <com.easynfc.util.custom.CustomTextView
                android:id="@+id/txt_format_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_padding"
                android:text="@string/empty_tag"
                android:textAllCaps="true"
                android:textColor="@color/easy_black_ghost"
                android:textSize="@dimen/input_title" />

            <com.easynfc.util.custom.CustomTextView
                android:id="@+id/txt_format_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_padding"
                android:layout_marginTop="@dimen/app_padding"
                android:text="@string/data_lost"
                android:textAllCaps="false"
                android:textColor="@color/tomato"
                android:textSize="@dimen/input_title" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_marginRight="@dimen/app_padding"
            android:background="@color/easy_black_superlight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/easy_black"
            android:gravity="center"
            android:padding="@dimen/app_padding"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_format"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:background="@drawable/button_black_rounded_border"
                android:text="@string/format"
                android:textAllCaps="false"
                android:textColor="@color/easy_black_ghost"
                android:textSize="@dimen/button_txt" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>

