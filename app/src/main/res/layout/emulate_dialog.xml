<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easy_black_dark90"
    android:clickable="true">


    <ImageButton
        android:id="@+id/btn_close_emulate_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/close_padding"
        android:src="@drawable/ic_close_ghost_35dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/app_double_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_emulate_transfer_device"
        android:tint="@color/easy_black_superlight" />

    <ProgressBar
        android:id="@+id/progress_wheel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/easy_black_superlight" />

    <com.easynfc.util.custom.CustomTextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/tap_android_device"
        android:textAllCaps="true"
        android:textColor="@color/mustard"
        android:textSize="@dimen/input_title_big" />


</RelativeLayout>