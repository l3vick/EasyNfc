<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tag_menu_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/easy_black">

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_type"
            android:gravity="center"
            android:textColor="@color/mustard"
            android:textSize="@dimen/tag_menu_type" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/app_padding"
        android:layout_marginRight="@dimen/app_padding"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"></RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/app_padding"
        android:layout_marginBottom="@dimen/app_padding"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"></RelativeLayout>

</RelativeLayout>