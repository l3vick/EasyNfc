<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tag_menu_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/easy_black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/easy_black_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/easy_black"
            android:elevation="@dimen/elevation">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" />

            <com.easynfc.util.custom.CustomTextView
                android:id="@+id/txt_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_type"
                android:layout_marginTop="@dimen/margin_txt_type_tags_menu"
                android:gravity="center"
                android:textColor="@color/mustard"
                android:textSize="@dimen/tag_menu_type" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>