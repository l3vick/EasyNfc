<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="title"
            type="java.lang.String" />
        <variable
            name="image"
            type="android.graphics.drawable.Drawable" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_tag_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_material_800">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/elevation"
            android:layout_margin="@dimen/item_tags_margin_border"
            android:background="@drawable/item_tag_rounded_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/gray_material_800">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="@dimen/item_tags_img_size"
                    android:layout_height="@dimen/item_tags_img_size"
                    android:src="@{image}"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_type"
                    android:layout_marginTop="@dimen/item_tags_txt_margin_top"
                    android:gravity="center"
                    android:text="@{title}"
                    android:textColor="@color/amber_material_500"
                    android:textSize="@dimen/item_tags_txt_size" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>