<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_tag_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_material_800">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/elevation"
            android:layout_margin="@dimen/item_tags_margin_border"
            android:background="@drawable/item_tag_rounded_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/separator_height"
                android:background="@color/gray_material_800">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="@dimen/item_tags_img_size"
                    android:layout_height="@dimen/item_tags_img_size"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_type"
                    style="@style/tag_txt" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>