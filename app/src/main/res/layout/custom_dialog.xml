<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/ghost_white"
    android:orientation="vertical"
    android:layout_margin="@dimen/dialog_margin"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/titleDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_record"
            android:gravity="center"
            android:textAllCaps="true"
            android:lines="2"
            android:textColor="@color/easy_black_dark"
            android:textSize="@dimen/dialog_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        >

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            wheel:matProg_barColor="@color/easy_black_dark"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_rimColor="@color/ghost_white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelDialogBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ghost_white"
            android:text="Cancel"
            android:textColor="@color/easy_black_dark"
            android:textSize="@dimen/dialog_text_size" />

    </LinearLayout>


</LinearLayout>