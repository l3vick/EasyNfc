<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easy_black"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.easynfc.writer.Url.UrlWriterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/easy_black"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url"
            android:textAllCaps="true"
            android:textColor="@color/mustard"
            android:textSize="@dimen/type_title" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/app_padding"
        android:layout_marginRight="@dimen/app_padding"
        android:background="@color/easy_black_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/easy_black"
        android:gravity="center|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_simple_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:text="@string/enter_url"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/input_title" />

        <EditText
            android:id="@+id/et_simple_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_marginRight="@dimen/app_padding"
            android:layout_marginTop="@dimen/app_padding"
            android:background="@drawable/edit_text_rounded_border"
            android:hint="@string/enter_url_hint"
            android:paddingLeft="@dimen/app_padding"
            android:textColor="@android:color/white"
            android:textColorHint="@color/easy_grey" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/app_padding"
        android:layout_marginRight="@dimen/app_padding"
        android:background="@color/easy_black_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/easy_black"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_padding"
            android:paddingRight="@dimen/app_padding">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:background="@drawable/button_white_rounded_border"
                android:text="@string/save"
                android:textAllCaps="true"
                android:textColor="@color/easy_black_dark"
                android:textSize="@dimen/button_txt" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_padding"
            android:paddingRight="@dimen/app_padding">


            <Button
                android:id="@+id/btn_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:background="@drawable/button_black_rounded_border"
                android:text="@string/record"
                android:textAllCaps="true"
                android:textColor="@color/ghost_white"
                android:textSize="@dimen/button_txt" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
